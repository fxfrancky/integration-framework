    <select id="selectUsers"  resultMap="UserMap">
        SELECT *
        FROM public.user
    </select>

    <select id="getUserByLogin" resultMap="UserMap">
        SELECT *
        FROM public.user
        WHERE        login = #{login}
    </select>


    <insert id="insertNewUser" parameterType="User">
