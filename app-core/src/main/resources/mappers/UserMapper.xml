        INSERT INTO public.user(
        login, password, email)
        VALUES (#{login}, #{password},  #{email});
        <selectKey keyProperty = "id_user" resultType = "Integer" order = "AFTER">
            select NEXTVAL('public.user_id_user_seq')
        </selectKey>
    </insert>

